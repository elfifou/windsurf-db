{% extends "WindsurfdbBaseBundle::layout.html.twig" %}

{% block title %}{{ 'windsurfdb.matos.form.marque.add.title'|trans }}{% endblock %}

{% block head %}
	{% stylesheets filter='cssrewrite, ?yui_css' 'bundles/windsurfdb/less/test.less' %}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css">
	{% endstylesheets %}
{% endblock %}

{% block body %}
	<h1>{{ 'windsurfdb.matos.form.marque.add.title'|trans }}</h1>
	{{ form_start(form) }}

	{{ form_errors(form) }}

	<table>
		<tbody>
			<tr>
				<td>{{ form_label(form.name, "windsurfdb.matos.form.marque.name", {'label_attr': {'class': 'class-de-test'}}) }}</td>
				<td>{{ form_widget(form.name, {'attr': {'class': 'class-de-test'}}) }} {{ form_errors(form.name) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.description, "windsurfdb.matos.form.marque.description") }}</td>
				<td>{{ form_widget(form.description) }} {{ form_errors(form.description) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.exist, "windsurfdb.matos.form.marque.exist") }}</td>
				<td>{{ form_widget(form.exist) }} {{ form_errors(form.exist) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.url, "windsurfdb.matos.form.marque.url") }}</td>
				<td>{{ form_widget(form.url) }} {{ form_errors(form.url) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.type, "windsurfdb.matos.form.marque.type") }}</td>
				<td>{{ form_widget(form.type) }} {{ form_errors(form.type) }}</td>
			</tr>
			<tr class="align-center">
				<td colspan="2">{{ form_widget(form.save, {'label': 'windsurfdb.matos.form.marque.add.btn' }) }}</td>
			</tr>
		</tbody>
	</table>

	{{ form_rest(form) }}

	{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
	{% javascripts filter='?yui_js' 'bundles/windsurfdb/js/add_marque.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}
